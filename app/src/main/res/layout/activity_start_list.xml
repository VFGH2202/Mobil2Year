<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.StartList">



    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/FABase"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/fab_margin"
        android:backgroundTint="@color/FABase"
        android:contentDescription="@string/add"
        android:src="@drawable/fab_add_icon"
        app:fabSize="normal"
        />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/FABweb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="80dp"
        android:layout_marginBottom="15dp"
        android:src="@drawable/web_url"
        app:fabSize="mini"
        android:visibility="invisible"
        android:clickable="false"
        />
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/FABcam"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="70dp"
        android:layout_marginBottom="70dp"
        android:src="@drawable/baseline_photo_camera_24"
        app:fabSize="mini"
        android:visibility="invisible"
        android:clickable="false"
        />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/FABtxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="80dp"
        android:src="@drawable/baseline_text_snippet_24"
        app:fabSize="mini"
        android:visibility="invisible"
        android:clickable="false"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</FrameLayout>